<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputWordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/inputWordEditText"
               android:text="add"
        app:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/toSearchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputWordEditText"
        android:text="to search activity"
        app:backgroundTint="#2196F3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wordListRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toSearchButton" />
</RelativeLayout>